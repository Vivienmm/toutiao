<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/layout"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:baselineAligned="false"
        android:paddingBottom="8dp"
        android:weightSum="6" >

        <RelativeLayout
            android:id="@+id/layout_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/imageButtonBack"
                style="@style/default_imageview"
                android:contentDescription="@null"
                android:src="@mipmap/webview_back_pressed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageButtonBack"
                android:layout_centerHorizontal="true"
                android:text="后退"
                android:textColor="@color/default_text_color" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_forward"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/imageButtonForward"
                style="@style/default_imageview"
                android:contentDescription="@null"
                android:src="@mipmap/webview_forward_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageButtonForward"
                android:layout_centerHorizontal="true"
                android:text="前进"
                android:textColor="@color/default_text_color" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/imageButtonHome"
                style="@style/default_imageview"
                android:contentDescription="@null"
                android:src="@mipmap/webview_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageButtonHome"
                android:layout_centerHorizontal="true"
                android:text="主页"
                android:textColor="@color/default_text_color" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_fresh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/imageButtonfresh"
                style="@style/default_imageview"
                android:contentDescription="@null"
                android:src="@mipmap/webview_refresh_pressed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageButtonfresh"
                android:layout_centerHorizontal="true"
                android:text="刷新"
                android:textColor="@color/default_text_color" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_collection"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/imageButtonCollection"
                style="@style/default_imageview"
                android:contentDescription="@null"
                android:src="@mipmap/webview_collection_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageButtonCollection"
                android:layout_centerHorizontal="true"
                android:text="收藏"
                android:textColor="@color/default_text_color" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/imageButtonShare"
                style="@style/default_imageview"
                android:contentDescription="@null"
                android:src="@mipmap/webview_share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageButtonShare"
                android:layout_centerHorizontal="true"
                android:text="分享"
                android:textColor="@color/default_text_color" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>