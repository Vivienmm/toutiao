<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/subscribeContntLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="20dp">
    <ImageView
        android:id="@+id/subscribeImg"
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/subscribeImg"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/titleTV"
            android:text="题目"
            android:textSize="18sp"
            android:textColor="?attr/cstextColor"
            app:textColorAttr="cstextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/descTV"
            android:textColor="?attr/cstextColor"
            app:textColorAttr="cstextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/scribeTV"
        android:textColor="?attr/cstextColor"
        app:textColorAttr="cstextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sub_icon_bg"
        android:padding="6dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>