<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chinaso.toutiao.mvp.ui.activity.SettingActivity">

    <com.chinaso.toutiao.view.CustomActionBar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="账号设置" />

            <TextView
                android:id="@+id/personalSetting"
                style="@style/setting_text_new"
                android:text="个人设置" />

            <TextView
                android:id="@+id/bindOtherAccount"
                style="@style/setting_text_new"
                android:text="绑定其他平台" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/divider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统设置" />

            <TextView
                android:id="@+id/readingPreference"
                style="@style/setting_text_new"
                android:text="阅读偏好" />
            <RelativeLayout
                android:id="@+id/fontSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/setting_text_new"
                    android:text="正文字号" />
                <TextView
                    android:id="@+id/textSizeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中号字"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/right_arrow"
                    android:drawablePadding="10dp"
                    />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_push"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/setting_text_new"
                    android:text="@string/txt_push" />

                <Button
                    android:id="@+id/pushButton"
                    android:layout_width="38dp"
                    android:layout_height="19dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/switch_on"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/setting_text_new"
                    android:text="非WiFi网络下载图片" />

                <Button
                    android:id="@+id/showImgNowifiBtn"
                    android:layout_width="38dp"
                    android:layout_height="19dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/switch_on"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/clearCache"
                    style="@style/setting_text_new"
                    android:text="手动清除缓存" />

                <TextView
                    android:id="@+id/tv_cache_size"
                    style="@style/setting_text_new"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:text="手动清除缓存" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/divider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他设置" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/checkVersion"
                    style="@style/setting_text_new"
                    android:text="检查更新" />

                <TextView
                    android:id="@+id/tv_version"
                    style="@style/setting_text_new"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <TextView
                android:id="@+id/appGrade"
                style="@style/setting_text_new"
                android:text="为国搜头条评分" />

            <TextView
                android:id="@+id/msgSplash"
                style="@style/setting_text_new"
                android:text="封面故事" />

            <TextView
                android:id="@+id/aboutApp"
                style="@style/setting_text_new"
                android:text="关于" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
