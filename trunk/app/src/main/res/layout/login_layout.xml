<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@color/colorAccent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/settingActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="设置"
        android:textColor="@color/white"
        android:drawableLeft="@mipmap/setting"
        android:drawablePadding="8dp" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/successLoginLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/user_edit"
            android:layout_width="65dp"
            android:layout_height="65dp" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_edit"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phoneNumLoginLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="8dp">

        <TextView
            android:id="@+id/user_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:clickable="true"
            android:text="登录"
            android:textColor="@color/menu_white"
            android:textSize="16sp" />

        <View
            android:id="@+id/view_login_divider"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/user_login"
            android:layout_toEndOf="@+id/user_login"
            android:background="@color/menu_white"
            android:padding="10dp" />


        <TextView
            android:id="@+id/user_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@+id/view_login_divider"
            android:layout_toEndOf="@+id/view_login_divider"
            android:clickable="true"
            android:text="@string/register_number"
            android:textColor="@color/menu_white"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/otherLoginLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="5dp">

        <TextView
            android:id="@+id/weixin_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableLeft="@mipmap/loginbyweixin"
            android:drawableStart="@mipmap/loginbyweixin"
            android:gravity="center"
            android:text="@string/weixin_login"
            android:textColor="@color/menu_white" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/menu_white"
            android:padding="10dp" />

        <TextView
            android:id="@+id/weibo_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableLeft="@mipmap/loginbyweibo"
            android:drawableStart="@mipmap/loginbyweibo"
            android:gravity="center"
            android:text="微博登录"
            android:textColor="@color/menu_white" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/menu_white"
            android:padding="10dp" />

        <TextView
            android:id="@+id/qq_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableLeft="@mipmap/loginbyqq"
            android:drawableStart="@mipmap/loginbyqq"
            android:gravity="center"
            android:text="QQ登录"
            android:textColor="@color/menu_white" />
    </LinearLayout>
</LinearLayout>