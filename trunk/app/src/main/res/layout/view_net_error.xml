<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/default_webview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/webError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:text="您访问的页面出错了"
        android:textColor="@color/txt_web_error"
        android:textSize="20sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/reLoad_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/webError"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_reload_selection"
        android:text="重新加载"
        android:textColor="#4682B4" />

    <TextView
        android:id="@+id/setWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reLoad_bt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:text="设置网络"
        android:textColor="#4682B4" />
</RelativeLayout>
