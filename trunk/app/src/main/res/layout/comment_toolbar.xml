<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:notButton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/comment_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:background="#efefef"
    android:paddingBottom="3dp"
    android:paddingTop="3dp">

    <RelativeLayout
        android:id="@+id/layout_edittext"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:clickable="true"
        android:gravity="center">

        <TextView
            android:id="@+id/layout_write"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="写评论"
            android:textColor="#dedede" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_comment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone">

        <com.chinaso.toutiao.view.NotificationButton
            android:id="@+id/imageButtonComment"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/comment"
            android:scaleType="fitCenter"
            android:scaleX="0.5"
            android:scaleY="0.5"
            notButton:circleBgColor="@android:color/holo_red_light"
            notButton:circleSize="10dp"
            notButton:textColor="@android:color/white"
            tools:targetApi="ice_cream_sandwich" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_share1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/imageButtonShare1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:contentDescription="@null"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/webview_share" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_collection1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/imageButtonCollection1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:contentDescription="@null"
            android:padding="12dp"
            android:src="@mipmap/webview_collection_normal" />
    </RelativeLayout>
</LinearLayout>