<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ViewStub
        android:id="@+id/no_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout="@layout/ll_no_collection"/>


    <com.chinaso.toutiao.view.CustomActionBar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.chinaso.toutiao.view.CustomActionBar>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_background" />

    <com.chinaso.toutiao.view.swipemenulistview.SwipeMenuListView
        android:id="@+id/collection_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/actionbar"
         />

    <View style="@style/night_mode_style"
        android:id="@+id/nightmode"/>

</RelativeLayout>