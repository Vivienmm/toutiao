<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- end -->
    <declare-styleable name="SegmentControl">
        <attr name="cornerRadius" format="dimension|reference" />
        <attr name="colors" format="color|reference" />
        <attr name="textSelectedColors" format="color|reference" />
        <attr name="texts" format="string|reference" />
        <attr name="android:textSize" />
        <attr name="direction" format="enum">
            <enum name="horizon" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <!-- 外部边框的width -->
        <attr name="boundWidth" format="dimension|reference" />
        <!-- 内部边框的width -->
        <attr name="separatorWidth" format="dimension|reference" />
        <attr name="gaps" format="dimension|reference" />
        <attr name="horizonGap" format="dimension|reference" />
        <attr name="verticalGap" format="dimension|reference" />
    </declare-styleable>

    <!-- 定义日/夜间模式 -->
    <attr name="csbackground" format="color|reference"/>
    <attr name="cslistbackground" format="color|reference"/>
    <attr name="csbackgroundDrawable" format="reference"/>
    <attr name="cstextColor" format="color"/>
    <attr name="csItemBackground" format="color"/>
</resources>