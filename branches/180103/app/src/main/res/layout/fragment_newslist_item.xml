<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/newsitemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/cslistbackground"
    app:backgroundAttr="cslistbackground"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/newslist_img_width"
        android:layout_height="@dimen/newslist_img_height"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="?attr/cstextColor"
            app:textColorAttr="cstextColor"
            android:textSize="@dimen/newslist_title" />

        <TextView
            android:id="@+id/sourseTimeTV"
            android:layout_below="@id/titleTV"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/newslist_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/cstextColor"
            app:textColorAttr="cstextColor"/>

        <TextView
            android:id="@+id/subjectTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/sourseTimeTV"
            android:textColor="?attr/cstextColor"
            app:textColorAttr="cstextColor"/>
    </RelativeLayout>

</LinearLayout>